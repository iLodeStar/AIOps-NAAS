# AIOps-NAAS example environment file
# Copy this file to .env and edit values as needed.
# Do NOT commit your real .env with secrets.

# --- Admin credentials ---
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana

# --- ClickHouse ---
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=changeme_clickhouse

# --- Optional external integrations ---
# See docs step 4 for how to obtain these
WEATHER_API_KEY=
SCHEDULE_API_KEY=

# --- Logging/runtime ---
LOG_LEVEL=INFO
DEBUG_MODE=false
SIMULATION_MODE=false

# --- Optional OIDC / Keycloak (only if you run Keycloak locally per docs) ---
# If you don't run Keycloak locally, you can leave these as-is or remove them.
OIDC_ISSUER_URL=http://localhost:8089/realms/aiops
OIDC_CLIENT_ID=onboarding-service
OIDC_CLIENT_SECRET=changeme_oidc_secret
OIDC_REDIRECT_URI=http://localhost:8090/auth/callback
SECRET_KEY=changeme_secret_key

# --- Optional service toggles (for application logic, not Docker Compose) ---
# These control whether applications attempt to connect to optional services
ENABLE_QDRANT=true
ENABLE_BENTHOS=true  
ENABLE_OLLAMA=true

# --- OLLAMA Configuration ---
# Default LLM model to pull and use (change this to use a different model)
OLLAMA_DEFAULT_MODEL=mistral
# Whether to automatically pull the default model on startup
OLLAMA_AUTO_PULL=true